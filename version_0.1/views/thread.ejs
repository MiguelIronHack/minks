<div id="thread-wrapper">
  <div class="card m-5">
    <div class="card-body">
      <h5 id="topic" thread-id="<%= thread._id%>" class="card-title">
        <%= thread.title %>
      </h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= thread.category%></h6>
      <p class="card-text"><%= thread.message%></p>
      <p class="badge badge-info "><%= thread.owner.name%></p>
      <p class="card-text">
        <%= moment(thread.date).format("MMMM Do YYYY, h:mm")%>
      </p>
    </div>
  </div>

  <% for(let post of thread.posts){%>
  <div class="card m-5">
    <div class="card-body">
      <h5 class="badge badge-success card-title"><%= post.owner.name%></h5>
      <p class="card-text"><%= post.message%></p>
      <p class="card-text">
        <%= moment(post.date).format("MMMM Do YYYY, h:mm") %>
      </p>
      <h6 class="card-subtitle mb-2 text-muted"></h6>
    </div>
  </div>
  <%}%>
</div>
<div class="form-group container form-content">
  <label for="form-message">Message</label>
  <textarea
    class="form-control bg-dark"
    id="post-message"
    placeholder="input your text here..."
  ></textarea>
  <button class="btn-primary btn mt-3" id="create-post">
    Create Thread
  </button>
</div>
<div
  class="modal fade"
  id="error-modal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        Please sign in to continue : )
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>
